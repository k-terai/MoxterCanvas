<Window x:Class="McEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:McEditor"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="{DynamicResource CustomWindowBackground}" WindowStartupLocation="CenterScreen" WindowState="Maximized" MinWidth="800" MinHeight="450">
    <Grid>
        <Menu Height="22" VerticalAlignment="Top" d:LayoutOverrides="Height" Background="White">
            <MenuItem Header="File(_F)" Height="22" Width="50">
                <MenuItem Header="New Canvas"/>
            </MenuItem>
            <MenuItem Header="Edit(_E)" Height="22" Width="50"/>
            <MenuItem Header="Debug(_D)" Height="22" Width="70"/>
            <MenuItem Header="Window(_W)" Height="22" Width="80"/>
            <MenuItem Header="Help(_H)" Height="22" Width="60"/>
        </Menu>

    </Grid>
</Window>
