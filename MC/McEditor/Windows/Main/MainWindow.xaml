<Window x:Class="McEditor.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:McEditor.Windows"
        xmlns:service="clr-namespace:McEditor.Service"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="{DynamicResource CustomWindowBackground}" WindowStartupLocation="CenterScreen" WindowState="Maximized" MinWidth="800" MinHeight="450">

    <Window.DataContext>
        <local:MainWindowViewModel/>
    </Window.DataContext>

    <Grid>
        <Menu Height="22" VerticalAlignment="Top" d:LayoutOverrides="Height" Background="White">
            <MenuItem Header="{Binding Source={x:Static service:ResourceService.Current}, Path=Resources.File, Mode=OneWay}" Height="22" Width="60">
                <MenuItem Header="{Binding Source={x:Static service:ResourceService.Current}, Path=Resources.NewCanvas, Mode=OneWay}" Command="{Binding CreateNewCanvasCommand,Mode=OneWay,UpdateSourceTrigger=PropertyChanged}" InputGestureText="Ctrl+N"/>
                <MenuItem Header="{Binding Source={x:Static service:ResourceService.Current}, Path=Resources.OpenCanvas, Mode=OneWay}" InputGestureText="Ctrl+O" Command="{Binding OpenCanvasCommand,Mode=OneWay,UpdateSourceTrigger=PropertyChanged}"/>
                <Separator/>
                <MenuItem Header="{Binding Resources.Save, Mode=OneWay, Source={x:Static service:ResourceService.Current}}" InputGestureText="Ctrl+S" Command="{Binding SaveCommand, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}">
                    <MenuItem.Icon>
                        <iconPacks:PackIconFeatherIcons Kind="Save" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="{Binding Resources.SaveAs, Mode=OneWay, Source={x:Static service:ResourceService.Current}}" Command="{Binding SaveAsCommand, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}">
                    <MenuItem.Icon>
                        <iconPacks:PackIconMaterial Kind="ContentSaveEditOutline" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="{Binding Resources.SaveAll, Mode=OneWay, Source={x:Static service:ResourceService.Current}}" InputGestureText="Ctrl+Shift+S"  Command="{Binding SaveAllCommand, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}">
                    <MenuItem.Icon>
                        <iconPacks:PackIconMaterialLight Kind="ContentSaveAll" />
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem  Header="{Binding Source={x:Static service:ResourceService.Current}, Path=Resources.Edit, Mode=OneWay}" Height="22" Width="50"/>
            <MenuItem Header="{Binding Source={x:Static service:ResourceService.Current}, Path=Resources.Debug, Mode=OneWay}"  Height="22" Width="70"/>
            <MenuItem Header="{Binding Source={x:Static service:ResourceService.Current}, Path=Resources.Window, Mode=OneWay}"  Height="22" Width="80"/>
            <MenuItem Header="{Binding Source={x:Static service:ResourceService.Current}, Path=Resources.Developer, Mode=OneWay}"  Height="22" Width="70">
                <MenuItem Header="{Binding Source={x:Static service:ResourceService.Current}, Path=Resources.Language, Mode=OneWay}">
                    <MenuItem Header="日本語" Command="{Binding ChangeLanguageCommand,Mode=OneWay,UpdateSourceTrigger=PropertyChanged}"
                               CommandParameter="{x:Static service:ResourceService.JAPANACECODE}"/>
                    <MenuItem Header="English" Command="{Binding ChangeLanguageCommand,Mode=OneWay,UpdateSourceTrigger=PropertyChanged}"
                               CommandParameter="{x:Static service:ResourceService.ENGLISHCODE}"/>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="{Binding Source={x:Static service:ResourceService.Current}, Path=Resources.Help, Mode=OneWay}" Height="22" Width="60"/>
        </Menu>
        <TabControl Style="{DynamicResource CustomTabControlStyle}" Margin="0,22,0,0" Background="{DynamicResource CustomWindowBackground}" 
                    BorderBrush="{DynamicResource TabItem.Static.Border}"
                    ItemsSource="{Binding TabItems,Mode=OneWay,UpdateSourceTrigger=PropertyChanged}"
                    SelectedIndex="{Binding SelectTabIndex,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}">
            <TabControl.ItemContainerStyle>
                <Style TargetType="TabItem" BasedOn="{StaticResource CustomTabItemStyle}">

                </Style>
            </TabControl.ItemContainerStyle>

            <TabControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Header,Mode=OneWay,UpdateSourceTrigger=PropertyChanged}" Foreground="{DynamicResource MainForeground}" />
                </DataTemplate>
            </TabControl.ItemTemplate>

            <TabControl.ContentTemplate>
                <DataTemplate>
                    <ContentControl Content="{Binding ContentControl.Control,Mode=OneWay,UpdateSourceTrigger=PropertyChanged}"/>
                </DataTemplate>
            </TabControl.ContentTemplate>
        </TabControl>

    </Grid>
</Window>
